- var date = new Date().toLocaleDateString("ar", {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'})
- var time = new Date().toLocaleTimeString('ar-EG');

main
    .col-1 
        h1.title LEEN SALON
        .date
            p #{date}
            p.time #{time}

        .user
            include ./icons/userid.svg
            p#username #{user.username}
            p.userid 001
        
        .search
            input(type="text", class="search-bar", placeholder="أبحث عن الخدمة او المنتج")
            i.search-icon
                include ./icons/search.svg 
        ul.categories
            each category in Object.keys(data)
                li.category #{category}

        .lists
            each category in Object.keys(data)
                div(class="list" id=`${category}`)
                    each item in data[category]
                        .item(id=item.id)
                            p.item-name= item.itemName
                            p.item-price= item.itemPrice


    .col-2
        .invoice 
            p Invoice: #
                span.invoice-num #{currentInvoiceNumber}
            .invoice-items
                .row 
                    p Item
                    p Qty
                    p Price

            .bottom 
                p.subtotal Sub-total
                    span.subtotal-value 0
                button.payment Payment
    
    .payment-screen
        .payment-menu 
            i.close-payment
                include ./icons/x.svg
            h2 Payment
            p.subtotal Sub-total
                    span.subtotal-value 0
                
            p.discount Discount 
                select(id="add-discount")
                    option(value="0") 0%
                    option(value="5") 5% 
                    option(value="10") 10% 
                    option(value="15") 15% 
                    option(value="20") 20%
                    option(value="25") 25%
                    option(value="50") 50% 
                span.discount-value 0
            .payment-method 
                .cash.method
                    i
                        include ./icons/cash.svg
                    p Cash
                .credit-card.method.selected-method
                    i
                        include ./icons/card.svg
                    p Credit Card
            h3.current-method Credit Card
            .menu-row
                .change-calculator
                    .calculator-screen
                        .amount
                            input.amount-input(type="number" placeholder="Amount")
                            i.ac
                                include ./icons/x.svg
                        p.change Change: 
                            span.change-value 0
                    .calculator-btns
                        .num.num-7 7
                        .num.num-8 8
                        .num.num-9 9
                        .num.num-4 4
                        .num.num-5 5
                        .num.num-6 6
                        .num.num-1 1
                        .num.num-2 2
                        .num.num-3 3
                        .num.num-0 0
                        .dot .
                        .equal =
                .confirm
                    p.total Total:
                        span.total-value 0
                    button.confirm-payment Confirm Payment
                    
                
    script(src="/scripts/home/display_category.js")
    script(src="/scripts/home/handle_items.js")

        
